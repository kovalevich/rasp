{% if items|length > 0 %}
    {% for item in items %}
        <div class="news-item">
            <h3 style="font-size: 1.5em; margin: 15px 0px;"><a href="{{ path('publication_view', {slug: item.slug}) }}">{{ item.title }}</a></h3>
            {{ item.text | truncate(100, true, '...') | raw }}
        </div>
    {% endfor %}
{% else %}
    Нет публикаций
{% endif %}